NIC = [
	NETWORK_ID = "0", # PrivateNet
	MAC = "B2:86:01:80:00:00",
	IP = "10.1.1.1"
]
NIC = [
	NETWORK_ID = "1", # Public
	MAC = "B2:86:01:80:00:01",
	IP = "133.1.134.200"
]

