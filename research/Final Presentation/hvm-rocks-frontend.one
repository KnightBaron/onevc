NAME = HVM-Rocks-Frontend
CPU = 0.4
MEMORY = 1024

OS = [
	KERNEL = "/usr/lib/xen/boot/hvmloader",
	BOOT = "cdrom"
]

FEATURES = [ acpi = "yes" ]

RAW = [
	TYPE = "xen",
	DATA = "#
builder=\"hvm\"
device_model=\"/usr/lib64/xen/bin/qemu-dm\"
vnc = \"1\"
vncunused = \"1\"
pae = 1
acpi = 1
apic = 1
boot = \"cd\""
]

#GRAPHICS = [
#	TYPE = "vnc",
#	LISTEN = "0.0.0.0"
#	#PORT = "5930"
#]

#REQUIREMENTS = "MODELNAME=\"*Xeon*\""
REQUIREMENTS = "NAME=\"kyubei\""
#REQUIREMENTS = "NAME=\"vm-container-0-0\""

DISK = [
	IMAGE_ID = "3", # Rocks CD x86_64
	target = "hdd:cdrom",
	readonly = "yes",
	driver = "file:"
]

DISK = [
	TYPE = "fs",
	SIZE = "30720", # 30 GB
	FORMAT = "ext3",
	SAVE = "yes",
	READONLY = "no",
	TARGET = "hda"
]

